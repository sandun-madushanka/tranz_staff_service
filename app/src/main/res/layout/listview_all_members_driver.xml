<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundcolor"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundcolor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundcolor"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/crdvwmemlstDriver"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/backgroundcolor"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">


                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@color/backgroundcolor"
                        android:gravity="center"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="5dp"
                            android:clickable="true"
                            android:elevation="10dp"

                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="40dp">

                            <ImageView
                                android:id="@+id/dpmemlst"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/backgroundcolor"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_perm_username" />

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@color/backgroundcolor"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/namememlst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:text="Some Name"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="5dp">

                            <Button
                                android:id="@+id/btncallstfServiceDriverMem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:drawableLeft="@drawable/ic_call"
                                android:onClick="btnstfserviceCallHomeDriver"
                                android:textColor="@color/colorPrimary"
                                tools:ignore="OnClick" />

                            <Button
                                android:id="@+id/btnmsgstfServiceDriverMem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                                android:onClick="btnstfservicebackHomeDriver"
                                android:textColor="@color/colorPrimary"
                                tools:ignore="OnClick" />

                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/relamemlistbtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/backgroundcolor"
                        android:gravity="center">

                        <!--<ImageView-->
                        <!--android:id="@+id/optionDrivememlstr"-->
                        <!--android:layout_width="80dp"-->
                        <!--android:layout_height="30dp"-->
                        <!--android:clickable="true"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:foregroundGravity="center"-->
                        <!--android:foreground="?android:attr/selectableItemBackground"-->
                        <!--android:background="@drawable/buttonstyle3"-->
                        <!--android:src="@drawable/ic_option" />-->

                        <Button
                            android:id="@+id/optionDrivememlstr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:background="@drawable/buttonstyle3"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:text="Remove" />


                    </RelativeLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>