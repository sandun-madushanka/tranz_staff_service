<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.login">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical"
                android:padding="50dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to TranZ"
                    android:textColor="@color/backgroundcolor"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/buttonstyle2"
                        android:onClick="btnSignup"
                        android:text="Sign Up"
                        android:textColor="@color/backgroundcolor" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:text="Sign In"
                    android:textColor="@color/darkdeepgray"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/idusername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_perm_username"
                    android:hint="EMAIL"
                    android:inputType="textWebEmailAddress"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/idpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_lock_password"
                    android:hint="PASSWORD"
                    android:inputType="textPassword"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/remembermeid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:text="@string/txtRemember" />


                <Button
                    android:id="@+id/btnlogin"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/buttonstyle1"
                    android:drawableRight="@drawable/ic_send_signin"
                    android:onClick="btnSignin"
                    android:text="Sign In"
                    android:textColor="@color/backgroundcolor" />

                <Button
                    android:id="@+id/optionDrivememlstr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttonstyle3"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:onClick="btnfpSignin"
                    android:text="Forgot Password" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>